<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constaintLayout_item_of_recyclerview_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_recyclerview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_recyclerview_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Describe"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView_recyclerview_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_title" />

    <TextView
        android:id="@+id/textView_recyclerview_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="State"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_describe"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView_recyclerview_describe"
        app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_describe" />

    <TextView
        android:id="@+id/textView_recyclerview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Time"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_date"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/textView_recyclerview_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_date" />

    <TextView
        android:id="@+id/textView_recyclerview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView_recyclerview_state"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/textView_recyclerview_state"
        app:layout_constraintTop_toBottomOf="@+id/textView_recyclerview_state" />

</androidx.constraintlayout.widget.ConstraintLayout>